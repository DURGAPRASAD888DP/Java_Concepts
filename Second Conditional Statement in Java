import java.util.Scanner;
public class Main
{
 public static void main(String[] args)
 {
     System.out.println("Enter Student's  Name and age");
     Scanner sc = new Scanner(System.in);
     String name = sc.next();
     int  age = sc.nextInt();
     System.out.println("Student Name: "+ name );
     System.out.println(" Student age: "+ age);
     
     //SECOND Conditional Statement:
     
     // IF ELSE working
     // An if-else statement in Java is used when you want to choose between two options.

     //If the condition is true, it runs one block of code.

     //If the condition is false, it runs a different block of code.
     
     // Age Checker
     
     if(age>=18)
     System.out.println(name+ " is an adult and age is "+ age );
     else
     System.out.println(name+ "is not an adult and he is under age "+ age);
     
 }
}

// Output:
Enter Student's  Name and age
Durgaprasadoduri
17
Student Name: Durgaprasadoduri
 Student age: 17
Durgaprasadoduriis not an adult and he is under age 17


